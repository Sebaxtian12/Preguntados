<?xml version="1.0" encoding="utf-8"?>
<com.skyfishjy.library.RippleBackground
    android:id="@+id/contenido"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.PreExamenFragment"
    android:layout_gravity="center"
    app:rb_color="#4CAF50"
    app:rb_radius="35dp"
    app:rb_rippleAmount="6"
    app:rb_duration="1800"
    app:rb_scale="10">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="80dp"
        android:layout_marginTop="25dp"
        android:text="Examen"
        android:textColor="@android:color/black"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <FrameLayout
        android:id="@+id/fondoscore"
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:gravity="fill">

        <TextView
            android:id="@+id/tvscore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="PuntuaciÃ³n record:"
            android:textSize="30sp" />

    </LinearLayout>

        <com.yy.mobile.rollingtextview.RollingTextView
            android:id="@+id/tv_puntuacionalta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="260dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/sourcesanspro_regular"
            android:shadowColor="@color/colorPrimaryDark"
            android:shadowDx="1.5"
            android:shadowDy="1.5"
            android:shadowRadius="1"
            android:text="@string/verpuntua"
            android:textColor="#1d1d1d"
            android:textSize="40sp"
            android:textStyle="bold" />
    </FrameLayout>

    <ImageView
        android:id="@+id/centerImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/fondoscore"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:contentDescription="@string/irahora"
        android:src="@drawable/play" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/centerImage"
        android:layout_marginTop="42dp">

        <ImageView
            android:id="@+id/bgwpp"
            android:layout_width="254dp"
            android:layout_height="321dp"
            android:layout_marginStart="200dp"
            android:contentDescription="@string/imagen"
            android:src="@drawable/inicio_jugar" />
    </FrameLayout>
</com.skyfishjy.library.RippleBackground>
