<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        //Change color Menu toolbar
        <item name="android:textColorSecondary">@color/white</item>

        <item name="android:fontFamily">@font/sourcesanspro_regular</item>
        //Show the app under the status bar
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        //Hide the scrollbar
        <item name="android:scrollbarThumbVertical">@null</item>
        //Android Navigation Bar color
        <item name="android:navigationBarColor">@color/background_dark_primary</item>
        <item name="android:windowLightNavigationBar">true</item>

        <item name="colorPrimary">#f39b2d</item>
        <item name="colorPrimaryDark">@color/bgcolor</item>
        <item name="colorAccent">#933E1D</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

        <item name="colorControlHighlight">@color/trasparent</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/background_dark_primary</item>
        <item name="android:textColor">@color/bgalertdheader</item>

        //Style
        <item name="colorStateNavigationItem">@color/menu_item_color_state</item>
        <item name="colorNavigationItemNormal">@color/background_light_secondary</item>
        <item name="colorNavigationItemSelected">@color/background_dark_primary_translucent</item>
        <item name="colorNavigationItemBackgroundSelected">@color/drawer_background_sel</item>
        <item name="colorNavigationItemBackgroundPressed">@color/drawer_background_pres</item>
        <item name="drawableNavigationItemBackground">@drawable/menu_background_color_state</item>
        <item name="android:listDivider">@color/colorPrimaryDark</item>


    </style>


    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">#373737</item>
    </style>


    <style name="AppTheme.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>



    <style name="Widget.Custom.NavigationView" parent="Widget.Design.NavigationView">
        <item name="itemIconTint">?attr/colorStateNavigationItem</item>
        <item name="itemTextAppearance">@style/TextAppearance.Custom.Navigation.Item</item>
        <item name="itemTextColor">?attr/colorStateNavigationItem</item>
        <item name="itemBackground">?attr/drawableNavigationItemBackground</item>
    </style>
    <style name="TextAppearance.Custom.Navigation.Item" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/dark_drawer</item>
        <item name="android:fontFamily">@font/sourcesanspro_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SomeButtonTheme" >
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
    </style>


    //Style for close activity by gesture
    <style name="Theme.Swipe.Back" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>


    //Rating bar style
    <style name="DialogAnimationTheme">
        <item name="android:windowEnterAnimation">@anim/anim_scale_in</item>
        <item name="android:windowExitAnimation">@anim/anim_scale_out</item>
    </style>

